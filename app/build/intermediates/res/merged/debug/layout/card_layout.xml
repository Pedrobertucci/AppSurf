<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:layout_marginBottom="1dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relativelayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/myImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/txt_temperatura"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="12dp"
                    android:gravity="right"
                    android:text="texto"
                    android:textColor="#f2f2f2"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/txt_praia"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/txt_temperatura"
                    android:layout_marginStart="13dp"
                    android:autoText="false"
                    android:elevation="0dp"
                    android:fontFamily="sans-serif"
                    android:text="TextView"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#f2f2f2"/>

                <TextView
                    android:id="@+id/txt_vento"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/txt_praia"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="sans-serif"
                    android:text="TextView"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#f2f2f2"/>

                <TextView
                    android:id="@+id/txt_ondas"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txt_vento"
                    android:layout_alignBottom="@+id/txt_vento"
                    android:layout_alignStart="@+id/txt_temperatura"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:text="TextView"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#f2f2f2"/>

        </RelativeLayout>
</LinearLayout>